<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pylapp.tapster.client.android.ui.mainscreen.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- The draw star command -->
            <include layout="@layout/card_command_drawstar"/>

            <!-- The draw circle command -->
            <include layout="@layout/card_command_drawcircle"/>

            <!-- The draw spiral command -->
            <include layout="@layout/card_command_drawspiral"/>

            <!-- The draw square command -->
            <include layout="@layout/card_command_drawsquare"/>

            <!-- The draw cross command -->
            <include layout="@layout/card_command_drawcross"/>

            <!-- The draw triangle command -->
            <include layout="@layout/card_command_drawtriangle"/>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
