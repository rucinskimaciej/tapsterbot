<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="pylapp.tapster.client.android">

    <!-- *********** -->
    <!-- Permissions -->
    <!-- *********** -->

    <!-- To record the audio stream of the user, for the Snips assistant-->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <!-- To load and use the Snips assistant's data (models, json configuration files, etc) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- To make vibrations so as to notify something to the user -->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <!-- For ACRA -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- To deal with the robot's server -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- ********************** -->
    <!-- The Android client app -->
    <!-- ********************** -->

    <application
        android:name=".Tapster2ClientApp"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme"
        android:supportsRtl="true"
        android:allowBackup="false">

        <!-- ********** -->
        <!-- Activities -->
        <!-- ********** -->

        <!-- The app intro activity -->
        <activity
            android:name=".ui.appintro.AppIntroActivity"
            android:screenOrientation="portrait"/>

        <!-- The main activity -->
        <activity
            android:name=".ui.mainscreen.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity> <!-- End of main activity -->

        <!-- The settings activity -->
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/app_settings"
            android:screenOrientation="portrait"/>

    </application>

</manifest>